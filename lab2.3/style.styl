@import url("https://fonts.googleapis.com/css2?family=Londrina+Sketch&display=swap")


$primary-color: darkcyan
$secondary-color: #80cbc4
$background-color: white
$border-color: #ccc
$hover-color: #0056b3
$text-color: #555
$light-bg-color: #eee

* 
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font-family: "Londrina Sketch", sans-serif
  font-weight: 400
  font-style: normal
  background-color: $background-color

.container
  display: flex
  flex-direction: column
  min-height: 100vh

.header
  display: flex
  justify-content: space-between
  align-items: center
  padding: 10px 20px
  background-color: $primary-color
  border-bottom: 1px solid $border-color

.logo
  font-size: 24px

.search
  display: flex
  gap: 5px
  align-items: center

  input
    width: 920px
    padding: 5px 10px
    border: 1px solid $border-color
    border-radius: 3px
    font-family: "Londrina Sketch", sans-serif
    font-weight: 400
    font-style: normal
    font-size: 16px

  button
    padding: 5px 10px
    background-color: $secondary-color
    color: white
    border: none
    border-radius: 3px
    cursor: pointer
    font-family: "Londrina Sketch", sans-serif
    font-weight: 400
    font-style: normal

.cart
  font-size: 18px
  font-weight: bold

.content
  display: flex
  flex: 1

.sidebar
  margin: 10px
  flex: 0 0 200px
  padding: 20px
  background-color: $primary-color
  border-right: 1px solid $border-color

  h3
    font-size: 18px
    margin-bottom: 15px

  ul
    list-style: none

  li
    margin-bottom: 10px
    cursor: pointer
    font-size: 16px

.products
  display: flex
  flex-wrap: wrap
  gap: 20px
  margin: 10px
  padding: 20px
  background-color: $secondary-color
  flex: 1
  justify-content: flex-start

.product
  display: flex
  flex-direction: column
  align-items: center
  width: calc(25% - 20px)
  height: 290px
  padding: 10px
  border: 1px solid $border-color
  border-radius: 5px
  background-color: $background-color
  box-sizing: border-box

  .product-image
    width: 150px
    height: 170px
    background-color: $light-bg-color
    margin-bottom: 10px

  .product-name
    font-size: 22px
    margin-bottom: 5px
    text-align: center

  .product-price
    font-size: 18px
    color: $text-color
    margin-bottom: 10px

  .product-button
    padding: 5px 10px
    background-color: $secondary-color
    border-radius: 8px
    color: white
    border: none
    cursor: pointer

    &:hover
      background-color: $hover-color

@media (min-width: 2560px)
  .logo
    font-size: 44px

  .search input
    width: 1400px
    font-size: 22px

  button
    font-size: 18px

  .cart
    font-size: 28px

  .sidebar li
    font-size: 32px

  .sidebar h3
    font-size: 32px

  .products
    gap: 30px

  .product-image
    height: 300px
    width: 200px

  .product
    width: calc(16.66% - 30px)
    height: 700px

    p
      font-size: 30px

  .product-button
    width: 100px
    height: 50px
    margin-top: 100px

@media (max-width: 768px)
  .header
    flex-direction: column
    align-items: flex-start

  .search
    flex-direction: column
    gap: 10px
    width: 100%

    input
      width: 100%

    button
      width: 100%

  .content
    flex-direction: column

  .sidebar
    flex: 0 0 auto
    width: 100%
    margin: 0
    padding: 10px
    border-right: none
    border-bottom: 1px solid $border-color

  .products
    margin: 0
    padding: 10px
    gap: 10px

  .product
    width: calc(50% - 10px)

  .product-image
    width: 100px
    height: 120px
